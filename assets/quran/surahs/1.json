{
  "number": 1,
  "name": "الفاتحة",
  "ayahs": [
    {
      "number": 1,
      "text": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
      "tafsir": "افتتاح السورة بحمد الله وطلب رحمته."
    },
    {
      "number": 2,
      "text": "الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ",
      "tafsir": "الثناء على الله رب العالمين."
    },
    {
      "number": 3,
      "text": "الرَّحْمَٰنِ الرَّحِيمِ",
      "tafsir": "بيان لرحمة الله وطفه بعباده."
    },
    {
      "number": 4,
      "text": "مَالِكِ يَوْمِ الدِّينِ",
      "tafsir": "إثبات ملك الله ويوم الحساب."
    },
    {
      "number": 5,
      "text": "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ",
      "tafsir": "الإقرار بإخلاص العبادة والتوكل على الله."
    },
    {
      "number": 6,
      "text": "اهْدِنَا الصِّرَاطَ الْمُسْتَقِيمَ",
      "tafsir": "دعاء بالهداية إلى الطريق القويم."
    },
    {
      "number": 7,
      "text": "صِرَاطَ الَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ الْمَغْضُوبِ عَلَيْهِمْ وَلَا الضَّالِّينَ",
      "tafsir": "بيان صراط الذين أنعم الله عليهم وتنزيهه عن طريق المغضوب عليهم والضالين."
    }
  ]
}
